extends layout

block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-blue-grey
                h3 Registo de Aplicação
        .w3-container
            form.w3-container(action='/user/registerapp', method='POST', id='signup_form')
                p
                label.w3-text-black
                    b Nome
                input.w3-input.w3-border.w3-light-grey(type='text', name='name', id='registo_username')
                br
                input.w3-btn.w3-grey(type='submit', value='Enviar', id='registo_button')
                p
        footer.w3-container.w3-blue-grey
            a(href="/") Voltar à página principal